@model DynamoPost.Models.Personaje

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Personaje</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPersonaje)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPersonaje)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pelicula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pelicula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    @if (Model.Descripcion != null)
    {
        <h2 style="color:blue">
            Ojos: @Model.Descripcion.Ojos,
            Pelo: @Model.Descripcion.Pelo,
            Villano: @Model.Descripcion.Villano
        </h2>
    }
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdPersonaje}) |
    <a asp-action="Index">Back to List</a>
</div>
